body
    background-color #f5f6fa
    font-size 12px
    font-family 'Roboto', sans-serif
    font-weight 500

h2,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px

.mtop16
    margin-top 16px

.wrapper
    min-height: 100vh
    overflow hidden
    // .col1
    //     float left
    //     position relative
    //     z-index 999
    //     width 17%
    .col2
        float left
        width 98%
.sidebar
    back-color #ffffff
    min-height 100vh
    .section-top
        background-color #e6e6e6
        //box-shadow 0 0.5rem 1rem rgba(0,0,0,0.25)

    .user
        color !important
        padding 16px
        a
            color #d32e16
            font-size 1.2em
    .main
        display block
        margin-top 10px
        ul
            li
                margin-bottom 4px
                a
                    color #d32e16 !important
                    display block
                    font-size 1.2em
                    padding 12px 12px
                    i
                        margin-right 10px
                        &:hover
                            color #ebbeb7

                    &:hover
                        background-color #e6e6e6
                        border-radius 10px
                        color #9e2210 !important
                        //box-shadow 0 0.5rem 1rem rgba(0,0,0,0.25)
                        text-decoration none
.nav-link
        color #d8d8d8 !important
        margin 0px 10px
        border-bottom 4px solid #343a40
        &:hover
            color #fff !important
            border-bottom 3px solid #fff
        .dropdown-toggle
            display block
            text-decoration none
            color #fff !important
        .email
            margin 0 10px
.topbar
    display inline-block
    width 100%
    .salir
        margin 10px 50px
        font-size 1.5em
        color #AA2904
        float right
        text-decoration none


.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        .breadcrumb-item
            a
                &:hover
                    text-decoration none
    .panel
        background-color #fff
        border-bottom 4px solid #9e2210
        width 100%
        .header
            border-botom 1px solid #e8e8e8
            .title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            font-size 1.3em
            .nav
                .nav-link
                    border-radius 4px
                    border 1px solid #9e2210
                    margin 5px
                    &:hover
                        background-color #9e2210
                        color #fff
            table
                .celdaicono
                    text-align center
                    font-size 1.3em

.opts
    a
        display inline-block
        border-radius 4px
        border 1px solid #dedede
        padding 8px 12px
.title
    width 100%
    .product_gallery
        display block
        overflow hidden
        width 100%
        .thumb
            float left
            display block
            margin-right 1%
            width 49%
            a
                border 1px dashed #666
                border-radius 4px
                color #333
                display block
                font-size 2em
                text-align center
                padding 40px 0px
                width 100%
                &:hover
                    background-color #000
                    color #9e2210


