body 
    background-color: #f5f6fa
    font-size: 12px
    font-family: 'Roboto', sans-serif

h2,h3,h4,h5,ul,body,html 
    padding 0px
    margin 0px

.mtop16
    margin-top 16px

.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83% 
.sidebar
    back-color #ffffff
    min-height 100vh
    .section-top
        background-color #e6e6e6
        //box-shadow 0 0.5rem 1rem rgba(0,0,0,0.25)
    .logo
        display block
        margin 0px auto
        padding-top 12px
        width 70%
    .user
        color !important
        padding 16px
        a
            color #d32e16
            font-size 1.2em
    .main
        display block
        margin-top 10px
        ul
            li 
                margin-bottom 4px
                a
                    color #d32e16 !important
                    display block
                    font-size 1.2em
                    padding 12px 12px                    
                    i
                        margin-right 10px
                        &:hover
                            color #ebbeb7

                    &:hover
                        background-color #e6e6e6
                        border-radius 10px
                        color #9e2210 !important
                        //box-shadow 0 0.5rem 1rem rgba(0,0,0,0.25)
                        text-decoration none
.navbar
    background-color #e6e6e6
    width 100%
    border-bottom 1px solid #a9aeb0
    a
        color #d32e16 !important
    .userinfo              
        float right           
        .email
            margin-left 15px            
            margin-right 15px            
        .salir
            font-size 1.5em
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        .breadcrumb-item
            a   
                &:hover
                    text-decoration none
    .panel
        background-color #fff
        border-bottom 4px solid #9e2210
        width 100%
        .header
            border-botom 1px solid #e8e8e8
            .title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            font-size 1.3em
            .nav
                .nav-link
                    border-radius 4px
                    border 1px solid #9e2210
                    margin 5px
                    &:hover
                        background-color #9e2210
                        color #fff
            table                
                .celdaicono
                    text-align center
                    font-size 1.3em

.opts
    a   
        display inline-block
        border-radius 4px
        border 1px solid #dedede
        padding 8px 12px

