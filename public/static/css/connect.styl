body
    margin 0px
    background-color #fefefe
    font-size 15px
    margin 0px
.box 
    background-color #fff 
    border 1px solid #d6d6d6
    border-radius 8px 
    position absolute
    width 600px
    .btn-success
        width 100%
        background-color #d32e16
        border 0px
    .form-control
        &:focus 
        &:active
            outline none
            box-shadow none
    .inside
        padding: 16px
    .header
        background-color #e6e6e6
        img 
          display block
          margin 0px auto
          width 50%
    .footer
        text-align center
        a 
            display inline-block
            font-size .95em
            &:last-child 
                margin-left 24px

.box_login
    left calc(50% - 300px)
    top calc(50% - 350px)

.box_register
    left calc(50% - 300px)
    top calc(50% - 425px)

.mtop16
    margin-top: 16px


        